{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/types",
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
